<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toread.sys.mapper.RoleMapper">
    <resultMap
            id="BaseResultMap"
            type="com.toread.sys.entity.Role">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="role_id"
            jdbcType="BIGINT"
            property="roleId"/>
        <result column="role_name"
                jdbcType="VARCHAR"
                property="roleName"/>
        <result column="role_state"
                jdbcType="VARCHAR"
                property="roleState"/>
        <result column="role_c_time"
                jdbcType="TIMESTAMP"
                property="roleCTime"/>
        <result column="role_u_time"
                jdbcType="TIMESTAMP"
                property="roleUTime"/>
    </resultMap>

    <select id="queryUserRole"
            resultType="role">
        SELECT
        rl.role_id
        AS
        roleId,
        rl.role_name
        AS
        roleName,
        rl.role_state
        AS
        roleState,
        rl.role_c_time
        AS
        roleCTime,
        rl.role_u_time
        AS
        roleUTime
        FROM
        sys_role
        rl
        LEFT
        JOIN
        sys_user_role
        ur
        ON
        ur.role_id
        =
        rl.role_id
        <where>
            ur.user_id
            =
            #{id}
            AND
            role_state
            =
            #{state}
        </where>
    </select>
</mapper>